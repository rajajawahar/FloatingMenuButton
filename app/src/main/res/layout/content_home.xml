<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.silicon.raja.floatingactionmenu.fab.FloatingActionMenu
        android:id="@+id/menu_labels_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_icon="@drawable/ic_menu_options"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true">

        <com.silicon.raja.floatingactionmenu.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause"
            fab:fab_label="Menu item 1"
            fab:fab_size="normal" />

        <com.silicon.raja.floatingactionmenu.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            fab:fab_label="Menu item 2"
            fab:fab_size="normal" />

        <com.silicon.raja.floatingactionmenu.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signature"
            fab:fab_label="Menu Item 3"
            fab:fab_size="normal" />

    </com.silicon.raja.floatingactionmenu.fab.FloatingActionMenu>
</LinearLayout>
